# my custom aliases for easy using :)
alias ara='apt search'
alias kur='sudo apt install'
alias yenile='sudo apt update'
alias guncelle='sudo apt upgrade'
alias upgradeable='nala list --upgradeable'
alias purge='sudo nala remove --purge'
alias remove='sudo nala remove'
alias gitremoteadd='bash ~/Documents/gitremoteadd.sh'
alias ytdlp='bash ~/Documents/GitHub/automated-ytdlp-script/script.sh'
alias libreddit='LIBREDDIT_DEFAULT_SHOW_NSFW=on libreddit'
alias openvpn='sudo openvpn --auth-nocache --config /mnt/WDC/.vpn/config.ovpn'
alias python='python3'
alias rss='newsboat -r'
alias addrss='bash ~/Documents/addrss4chezmoi'
# Kitty clear scrollback buffer
alias clear="printf '\E[H\E[3J'"
alias snano='sudo nano'
alias dietpi='TERM=xterm ssh root@dietpi'
alias arp-scan='sudo arp-scan --localnet'
